#define	LIGHTS	2
#ifdef  CONFIG_IDF_TARGET_ESP32
gpio	rgb		22				// GPIO for LED chain
gpio	blink		"-20 -8 -21"	.array=3	// Status LED
#endif

#ifdef  CONFIG_IDF_TARGET_ESP32S3
gpio	rgb		8				// GPIO for LED chain
gpio	blink		"8 8 8"		.array=3	// Status LED
#endif

bit	dark						// Dark mode (no status LED)

#ifdef  CONFIG_IDF_TARGET_ESP32S3
u8	cps		25				// Change per second
#else
u8	cps		10				// Change per second
#endif
u8	max.r		255				// Max RGB Red
u8	max.g		255				// Max RGB Green
u8	max.b		255				// Max RGB Blue
u16	leds		12				// How many LEDs
u8	webcontrol	2				// Web controls
json	init		"pulse"				// Default initial app (JSON)
u8	i2c	0					// I2C channel
gpio	scl						// Colour sensor SCL
gpio	sda						// Colour sensor SDA
u8	als	10	.hex=1				// Colour sensor ID

u16	start						// Start LED
u16	ring.start					// Start LED (ring)
u16	len						// Number of LEDs
u16	ring.len					// Number of LEDs (ring)
s16	top						// Top LED
s16	ring.top					// Top LED (ring)
u8	bright						// Per app brightness
s8	height						// Default Text height
u32	delay		.decimal=1			// Default delay time (s)
u32	limit		.decimal=1			// Default time limit (s)
u8	speed		.decimal=1			// Default cycle time (s)
u8	fade		.decimal=1			// Default Fade time (s)

bit	ha.enable					// Enable Home Assistant
s	ha.name		.array=LIGHTS .live=1		// Name of HA preset
json	ha.init		.array=LIGHTS .live=1		// Config of HA preset
